@model Travel_Agency___Data.ViewModels.BookingViewModel
@{
    ViewData["Title"] = "Book Package";
}
<div class="container mb-4" style="margin-top: 7rem;">
    <h2 class="text-center mb-4">Book Your Package</h2>
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-5">
                            <img src="@Model.PackageImage" alt="@Model.PackageName" class="img-fluid mb-3">
                            <h4>@Model.PackageName</h4>
                            <p>@Model.Description</p>
                            <p><strong>Price:</strong> $@Model.Price.ToString("F2") per person</p>
                            <p><strong>Start Date:</strong> @Model.TripStart.ToString("MM/dd/yyyy")</p>
                            <p><strong>End Date:</strong> @Model.TripEnd.ToString("MM/dd/yyyy")</p>
                            <hr />

                            <p id="totalPriceContainer" style="display: none;">
                                <strong>Total Price:</strong> $<span id="totalPrice"></span>
                            </p>
                        </div>
                        <div class="col-md-7">
                            <form asp-action="Purchase" asp-controller="Purchase" method="get">
                                <input type="hidden" asp-for="PackageId" />
                                <input type="hidden" id="hiddenTravelerCount" name="travelerCount" value="@Model.TravelerCount" /> <!-- Bind dynamically -->

                                <div class="mb-3">
                                    <label asp-for="TravelerCount" class="form-label">Number of Travelers</label>
                                    <input asp-for="TravelerCount" class="form-control" id="travelerCount" oninput="updateTravelerCount()" />
                                    <span asp-validation-for="TravelerCount" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="CustomerId" class="form-label">Customer ID</label>
                                    <input asp-for="CustomerId" class="form-control" />
                                    <span asp-validation-for="CustomerId" class="text-danger"></span>
                                </div>

                                <div class="text-center mt-4">
                                    <button type="submit" class="btn btn-primary btn-lg">Book Now</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
    <script>
        function updateTravelerCount() {
            // Update the hidden field with the value entered in the traveler count input
            const travelerCountInput = document.getElementById("travelerCount");
            const hiddenTravelerCount = document.getElementById("hiddenTravelerCount");
            hiddenTravelerCount.value = travelerCountInput.value;
        }
    </script>
}
