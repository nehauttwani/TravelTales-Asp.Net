@model Travel_Agency___Data.ViewModels.PurchasedProductsSummaryViewModel

<div class="container" style="margin-top: 100px;">
    <div class="card shadow-sm">
        <div class="card-header bg-light border-0">
            <h2 class="text-center mb-0">Purchase History</h2>
        </div>

 

            <!-- Products Table -->
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr class="table-light">
                            <th scope="col">Product Name</th>
                            <th scope="col" class="text-end">Base Price</th>
                            <th scope="col" class="text-end">Tax</th>
                            <th scope="col" class="text-end">Total Price</th>
                            <th scope="col" class="text-end">Purchase Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Products.Any())
                        {
                            @foreach (var product in Model.Products)
                            {
                                <tr>
                                    <td>@product.ProductName</td>
                                    <td class="text-end">@product.BasePrice.ToString("C")</td>
                                    <td class="text-end">@product.Tax.ToString("C")</td>
                                    <td class="text-end">@product.TotalPrice.ToString("C")</td>
                                    <td class="text-end">@product.PurchaseDate.ToString("MMM dd, yyyy")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-4">
                                    <div class="text-muted">
                                        <i class="fas fa-shopping-cart fa-2x mb-3"></i>
                                        <p class="mb-0">No purchase history found</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Summary Section -->
            <div class="card bg-light border-0 mt-4">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <h5 class="mb-0 text-muted">Total Amount Spent</h5>
                        </div>
                        <div class="col-auto">
                            <h4 class="mb-0 text-primary">@Model.TotalPaid.ToString("C")</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>