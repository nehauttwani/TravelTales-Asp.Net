@model Travel_Agency___Data.ViewModels.TravelPreferenceViewModel

<div class="container mb-4" style="margin-top: 7rem;">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">Edit Travel Preferences</h3>
                    <a asp-action="Index" class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-left me-2"></i>Back to Preferences
                    </a>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="CustomerId" />
                        <input type="hidden" asp-for="PreferenceId" />

                        <!-- Climate Preferences -->
                        <div class="mb-4">
                            <label asp-for="PreferredClimate" class="form-label">
                                <i class="fas fa-sun me-2 text-warning"></i>Preferred Climate
                            </label>
                            <select asp-for="PreferredClimate" class="form-select custom-select">
                                <option value="">Select Climate</option>
                                @foreach (var climate in Model.ClimateOptions)
                                {
                                    <option value="@climate">@climate</option>
                                }
                            </select>
                        </div>

                        <!-- Activities -->
                        <div class="mb-4">
                            <label asp-for="SelectedActivities" class="form-label">
                                <i class="fas fa-hiking me-2 text-success"></i>Preferred Activities
                            </label>
                            <div class="row g-3">
                                @foreach (var activity in Model.AvailableActivities)
                                {
                                    <div class="col-md-6">
                                        <div class="form-check custom-checkbox">
                                            <input class="form-check-input" type="checkbox"
                                                   name="SelectedActivities" value="@activity"
                                            @(Model.SelectedActivities.Contains(activity) ? "checked" : "") />
                                            <label class="form-check-label">@activity</label>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Travel Companion -->
                        <div class="mb-4">
                            <label asp-for="TravelCompanion" class="form-label">
                                <i class="fas fa-users me-2 text-info"></i>Travel Companion
                            </label>
                            <select asp-for="TravelCompanion" class="form-select custom-select">
                                <option value="">Select Travel Companion</option>
                                @foreach (var companion in Model.TravelCompanionOptions)
                                {
                                    <option value="@companion">@companion</option>
                                }
                            </select>
                        </div>

                        <!-- Location -->
                        <div class="mb-4">
                            <label asp-for="PreferredLocation" class="form-label">
                                <i class="fas fa-map-marker-alt me-2 text-danger"></i>Preferred Location
                            </label>
                            <select asp-for="PreferredLocation" class="form-select custom-select">
                                <option value="">Select Location</option>
                                @foreach (var location in Model.LocationOptions)
                                {
                                    <option value="@location">@location</option>
                                }
                            </select>
                        </div>

                        <div class="text-center mt-4">
                           <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i>Save Preferences
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .custom-select {
        border-radius: 8px;
        padding: 0.75rem;
        border: 1px solid #dee2e6;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

        .custom-select:focus {
            border-color: #80bdff;
            box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
        }

    .custom-checkbox .form-check-input {
        width: 1.2em;
        height: 1.2em;
        margin-top: 0.15em;
    }

    .custom-checkbox .form-check-label {
        padding-left: 0.5rem;
    }

    .form-label {
        font-weight: 600;
        color: #2c3e50;
        font-size: 1.1rem;
    }

    .card {
        border: none;
        border-radius: 15px;
    }

    .card-header {
        border-top-left-radius: 15px !important;
        border-top-right-radius: 15px !important;
    }

    .btn-lg {
        padding: 0.75rem 1.5rem;
        font-size: 1.1rem;
    }
</style>