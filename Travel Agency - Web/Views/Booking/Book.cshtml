@model Travel_Agency___Data.ViewModels.BookingViewModel
@{
    ViewData["Title"] = "Book Package";
}
<div class="container mb-4" style="margin-top: 7rem;">
    <div class="card shadow">
        <div class="card-header bg-dark text-white">
            <h3 class="mb-0 text-center">Book Your Package</h3>
        </div>
        <div class="card-body">
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>You are booking as an authenticated customer.
            </div>

            <div class="row">
                <!-- Package Details Column -->
                <div class="col-md-5">
                    <img src="@Model.PackageImage" alt="@Model.PackageName" class="img-fluid rounded mb-3">
                    <div class="package-details p-3 bg-light rounded">
                        <h4>@Model.PackageName</h4>
                        <p>@Model.Description</p>
                        <p><i class="fas fa-tag me-2"></i><strong>Price:</strong> $@Model.Price.ToString("F2") per person</p>
                        <p><i class="fas fa-calendar me-2"></i><strong>Start:</strong> @Model.TripStart.ToString("MMM dd, yyyy")</p>
                        <p><i class="fas fa-calendar-check me-2"></i><strong>End:</strong> @Model.TripEnd.ToString("MMM dd, yyyy")</p>
                        <hr />
                        <div id="totalPriceContainer" class="alert alert-success" style="display: none;">
                            <strong>Total Price:</strong> $<span id="totalPrice"></span>
                        </div>
                    </div>
                </div>

                <!-- Booking Form Column -->
                <div class="col-md-7">
                    <form asp-action="Book" method="post">
                        @Html.AntiForgeryToken()

                        <!-- Hidden Fields -->
                        <input type="hidden" asp-for="PackageId" />
                        <input type="hidden" asp-for="PackageName" />
                        <input type="hidden" asp-for="Price" />
                        <input type="hidden" asp-for="AgencyCommission" />
                        <input type="hidden" asp-for="TripStart" />
                        <input type="hidden" asp-for="TripEnd" />
                        <input type="hidden" asp-for="Description" />
                        <input type="hidden" asp-for="BookingDate" value="@DateTime.Now" />

                        <!-- Form Fields -->
                        <div class="mb-3">
                            <label asp-for="TravelerCount" class="form-label">
                                <i class="fas fa-users me-2"></i>Number of Travelers
                            </label>
                            <input asp-for="TravelerCount"
                                   class="form-control"
                                   id="travelerCount"
                                   min="1"
                                   value="1"
                                   oninput="updateTotalPrice()" />
                            <span asp-validation-for="TravelerCount" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TripTypeId" class="form-label">
                                <i class="fas fa-plane me-2"></i>Trip Type
                            </label>
                            <select asp-for="TripTypeId"
                                    class="form-select"
                                    asp-items="@(new SelectList(Model.TripTypes, "TripTypeId", "Ttname"))">
                                <option value="">-- Select Trip Type --</option>
                            </select>
                            <span asp-validation-for="TripTypeId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Destination" class="form-label">
                                <i class="fas fa-map-marker-alt me-2"></i>Destination
                            </label>
                            <input asp-for="Destination" class="form-control" required />
                            <span asp-validation-for="Destination" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ClassId" class="form-label">
                                <i class="fas fa-hotel me-2"></i>Travel Accommodations
                            </label>
                            <select asp-for="ClassId"
                                    class="form-select"
                                    asp-items="@(new SelectList(Model.Classes, "ClassId", "ClassName"))">
                                <option value="">-- Select Accommodation Type --</option>
                            </select>
                            <span asp-validation-for="ClassId" class="text-danger"></span>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-book me-2"></i>Book Now
                            </button>
                            <a asp-controller="Package" asp-action="Index" class="btn btn-secondary ms-2">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function updateTotalPrice() {
            var travelers = parseInt(document.getElementById('travelerCount').value) || 0;
            var pricePerPerson = @Model.Price;
            var totalPriceContainer = document.getElementById('totalPriceContainer');
            var totalPriceSpan = document.getElementById('totalPrice');

            if (travelers > 0) {
                var totalPrice = travelers * pricePerPerson;
                totalPriceSpan.textContent = totalPrice.toFixed(2);
                totalPriceContainer.style.display = 'block';
            } else {
                totalPriceContainer.style.display = 'none';
            }
        }

        // Initialize total price on page load
        document.addEventListener('DOMContentLoaded', function() {
            updateTotalPrice();
        });
    </script>
}