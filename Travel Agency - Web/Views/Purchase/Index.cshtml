@model List<Travel_Agency___Data.ViewModels.PurchaseViewModel>

<div class="purchase-container">
    <h1>Available Packages</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Package ID</th>
                <th>Price</th>
                <th>Wallet Balance</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var package in Model)
            {
                <tr>
                    <td>@package.PackageId</td>
                    <td>@package.PackagePrice.ToString("C")</td>
                    <td>@package.WalletBalance.ToString("C")</td>
                    <td>
                        <form asp-action="Purchase" asp-controller="Purchase" method="post">
                            <input type="hidden" name="customerId" value="@package.CustomerId" />
                            <input type="hidden" name="packageId" value="@package.PackageId" />
                            <input type="hidden" name="packagePrice" value="@package.PackagePrice" />
                            <button type="submit" class="btn btn-success">Purchase</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
