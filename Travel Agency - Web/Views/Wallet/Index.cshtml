@model Travel_Agency___Data.ViewModels.WalletViewModel

@{
    ViewData["BodyClass"] = "wallet-page";
}

<div class="container mt-5 wallet-container">
    <div class="row">
        <!-- Wallet Details -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow rounded border-0">
                <div class="card-body text-center">
                    <h2 class="text-primary font-weight-bold">Wallet</h2>
                    <h4>Current Balance:</h4>
                    <h3 class="text-success font-weight-bold">@Model.CurrentBalance.ToString("C")</h3>
                </div>
            </div>
        </div>

        <!-- Add Funds Form -->
        <div class="col-lg-8 mb-4">
            <div class="card shadow rounded border-0">
                <div class="card-body">
                    <h4 class="text-primary font-weight-bold mb-4">Add Funds via Credit Card</h4>
                    <form asp-action="AddFundsWithCreditCard" method="post">
                        <input type="hidden" name="customerId" value="@Model.CustomerId" />
                        <div class="form-group">
                            <label for="creditCardId">Select Credit Card</label>
                            <select id="creditCardId" name="creditCardId" class="form-control rounded-pill" required>
                                @foreach (var card in Model.CreditCards)
                                {
                                    <option value="@card.CreditCardId">
                                        @card.Ccname (**** @card.Ccnumber.Substring(card.Ccnumber.Length - 4))
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="addAmount">Amount</label>
                            <input type="number" id="addAmount" name="amount" class="form-control rounded-pill" step="0.01" placeholder="Enter amount" required />
                        </div>
                        <button type="submit" class="btn btn-success btn-block rounded-pill shadow-sm">Add Funds</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Transactions -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow rounded border-0">
                <div class="card-body">
                    <h4 class="text-primary font-weight-bold mb-3">Transaction History</h4>
                    <table class="table table-striped table-hover rounded">
                        <thead>
                            <tr class="bg-primary text-white">
                                <th>Date</th>
                                <th>Amount</th>
                                <th>Type</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Transactions.Any())
                            {
                                @foreach (var transaction in Model.Transactions)
                                {
                                    <tr>
                                        <td>@transaction.TransactionDate.ToString("g")</td>
                                        <td class="font-weight-bold @(transaction.TransactionType == "Deposit" ? "text-success" : "text-danger")">
                                            @transaction.Amount.ToString("C")
                                        </td>
                                        <td>@transaction.TransactionType</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="3" class="text-center text-muted">No transactions available</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
