@model Travel_Agency___Data.ViewModels.WalletViewModel

@{
    ViewData["BodyClass"] = "wallet-page";
}

<div class="container mt-5 pt-5 wallet-container">
    @*  Alert Messages *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @* Wallet and Add Funds  *@
    <div class="row g-4">
        @*  Wallet Balance  *@
        <div class="col-lg-4">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="fw-bold mb-0">Wallet</h4>
                </div>
                <div class="card-body text-center">
                    <p class="text-muted mb-2">Current Balance</p>
                    <h3 class="text-success fw-bold">@Model.CurrentBalance.ToString("C")</h3>
                </div>
            </div>
        </div>

        <!-- Add Funds -->
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-light text-primary">
                    <h5 class="fw-bold mb-0">Credit Card Information</h5>
                </div>
                <div class="card-body">
                    @if (Model.CreditCards != null && Model.CreditCards.Any())
                    {
                        @foreach (var card in Model.CreditCards)
                        {
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <div>
                                    <h6 class="mb-1">@card.Ccname</h6>
                                    <p class="mb-0 text-muted">**** **** **** @card.Ccnumber.Substring(card.Ccnumber.Length - 4)</p>
                                    <small class="text-muted">Expires: @card.Ccexpiry.ToString("MM/yy")</small>
                                </div>
                                <form asp-action="DeleteCreditCard" asp-controller="Wallet" method="post"
                                      onsubmit="return confirm('Are you sure you want to delete this credit card?');">
                                    <input type="hidden" name="customerId" value="@Model.CustomerId" />
                                    <input type="hidden" name="creditCardId" value="@card.CreditCardId" />
                                    <button type="submit" class="btn btn-danger">
                                        <i class="fas fa-trash-alt"></i> Delete Card
                                    </button>
                                </form>
                            </div>

                            <hr class="my-4">

                            @* Add Funds Form*@
                            <form asp-action="AddFundsWithCreditCard" method="post" class="needs-validation" novalidate>
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="customerId" value="@Model.CustomerId" />
                                <input type="hidden" name="creditCardId" value="@card.CreditCardId" />

                                <div class="mb-3">
                                    <label for="amount" class="form-label">Amount to Add</label>
                                    <div class="input-group has-validation">
                                        <span class="input-group-text">$</span>
                                        <input type="number"
                                               id="amount"
                                               name="amount"
                                               class="form-control shadow-sm"
                                               placeholder="0.00"
                                               step="0.01"
                                               min="10"
                                               max="10000"
                                               required />
                                        <div class="invalid-feedback">
                                            Please enter a valid amount between $10.00 and $10,000.00
                                        </div>
                                    </div>
                                    <small class="text-muted">Minimum: $10.00 | Maximum: $10,000.00</small>
                                </div>

                                <div class="d-grid">
                                    <button type="submit" class="btn btn-success btn-lg shadow">
                                        <i class="fas fa-plus-circle me-2"></i>Add Funds
                                    </button>
                                </div>
                            </form>
                        }
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            No credit cards available. Please add a credit card first.
                        </div>
                    }
                </div>
            </div>
        </div>

        @if (!Model.CreditCards.Any())
        {
            @* Add Credit Card Form *@
            <div class="row mt-4">
                <div class="col-12">
                    <div class="card shadow-lg border-0">
                        <div class="card-header bg-light text-primary">
                            <h5 class="fw-bold mb-0">Add New Credit Card</h5>
                        </div>
                        <div class="card-body">
                            <form asp-action="AddCreditCard" asp-controller="Wallet" method="post" class="needs-validation" novalidate>
                                @Html.AntiForgeryToken()
                                <input type="hidden" asp-for="CustomerId" />

                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Ccname" class="form-label">Card Type<span class="text-danger">*</span></label>
                                            <select asp-for="Ccname" class="form-select shadow-sm" required>
                                                <option value="">Select card type</option>
                                                <option value="Visa">Visa</option>
                                            </select>
                                            <div class="invalid-feedback">
                                                Please select a card type.
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Ccnumber" class="form-label">Card Number<span class="text-danger">*</span></label>
                                            <input asp-for="Ccnumber"
                                                   class="form-control shadow-sm"
                                                   placeholder="XXXX-XXXX-XXXX-XXXX"
                                                   pattern="^(\d{4}-){3}\d{4}$"
                                                   oninput="this.value = this.value.replace(/[^\d]/g, '').replace(/(\d{4})(?=\d)/g, '$1-').substr(0, 19);"
                                                   maxlength="19"
                                                   required />
                                            <div class="invalid-feedback">
                                                Please enter a valid 16-digit card number.
                                            </div>
                                            <small class="text-muted">Format: XXXX-XXXX-XXXX-XXXX</small>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Ccexpiry" class="form-label">Expiry Date<span class="text-danger">*</span></label>
                                            <input asp-for="Ccexpiry"
                                                   type="text"
                                                   class="form-control shadow-sm"
                                                   placeholder="MM/YY"
                                                   pattern="^(0[1-9]|1[0-2])\/([0-9]{2})$"
                                                   oninput="this.value = this.value.replace(/[^\d]/g, '').replace(/(\d{2})(?=\d)/g, '$1/').substr(0, 5);"
                                                   maxlength="5"
                                                   required />
                                            <div class="invalid-feedback">
                                                Please enter a valid expiry date in MM/YY format.
                                            </div>
                                            <small class="text-muted">Format: MM/YY (e.g., 04/26)</small>
                                        </div>
                                    </div>
                                </div>

                                <div class="mt-4">
                                    <button type="submit" class="btn btn-primary shadow">
                                        <i class="fas fa-credit-card me-2"></i>Add Card
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }

        @* Transaction History *@
        <div class="card shadow-lg border-0 mt-4">
            <div class="card-header bg-primary text-white text-center">
                <h4 class="fw-bold mb-0">Transaction History</h4>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Date</th>
                            <th>Amount</th>
                            <th>Type</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Transactions != null && Model.Transactions.Any())
                        {
                            @foreach (var transaction in Model.Transactions)
                            {
                                <tr>
                                    <td>@transaction.TransactionDate.ToString("g")</td>
                                    <td class="fw-bold @(transaction.TransactionType == "Deposit" ? "text-success" : "text-danger")">
                                        @transaction.Amount.ToString("C")
                                    </td>
                                    <td>
                                        @if (transaction.TransactionType == "Deposit")
                                        {
                                            <span class="badge bg-success">Deposit</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Withdrawal</span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center text-muted">No transactions available.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        @* Add Button to Navigate to Package Page *@
        <div class="text-center mt-4">
            <a asp-controller="Package" asp-action="Index" class="btn btn-primary btn-lg shadow">
                <i class="fas fa-suitcase"></i> View Packages
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Bootstrap Form Validation
        (() => {
            'use strict'

            // Fetch all forms that need validation
            const forms = document.querySelectorAll('.needs-validation')

            // Credit card expiry validation
            const expiryInput = document.querySelector('input[asp-for="Ccexpiry"]');
            if (expiryInput) {
                expiryInput.addEventListener('input', function() {
                    if (this.value.length === 5) {
                        const [month, year] = this.value.split('/');
                        const currentDate = new Date();
                        const currentYear = currentDate.getFullYear() % 100;
                        const currentMonth = currentDate.getMonth() + 1;
                        const fullYear = 2000 + parseInt(year);
                        const expiryDate = new Date(fullYear, parseInt(month), 0);
                        const maxDate = new Date();
                        maxDate.setFullYear(maxDate.getFullYear() + 5);

                        if (parseInt(year) < currentYear ||
                            (parseInt(year) === currentYear && parseInt(month) < currentMonth)) {
                            this.setCustomValidity('Card has expired. Please use a valid expiry date.');
                        } else if (expiryDate > maxDate) {
                            this.setCustomValidity('Invalid expiry date. Credit cards usually expire between three and five years after they are issued.');
                        } else {
                            this.setCustomValidity('');
                        }
                    }
                });
            }

            // Loop over forms and prevent submission
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();

        // Auto-hide alerts after 5 seconds
        setTimeout(function () {
            $('.alert').alert('close');
        }, 5000);
    </script>
}