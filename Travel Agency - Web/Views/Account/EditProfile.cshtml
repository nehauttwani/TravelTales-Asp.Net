@model Travel_Agency___Data.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container mb-4" style="margin-top: 7rem;">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">Edit Profile</h3>
                    <a asp-controller="Account" asp-action="Profile" class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-left me-2"></i>Back to Profile
                    </a>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="UpdateProfile" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <p class="mb-0"><i class="fas fa-exclamation-circle me-2"></i>@error.ErrorMessage</p>
                                }
                            </div>
                        }

                        <div class="row">
                            <!-- Personal Information -->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CustFirstName" class="form-label">
                                        <i class="fas fa-user me-2"></i>First Name
                                    </label>
                                    <input asp-for="CustFirstName" class="form-control" />
                                    <span asp-validation-for="CustFirstName" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="CustLastName" class="form-label">
                                        <i class="fas fa-user me-2"></i>Last Name
                                    </label>
                                    <input asp-for="CustLastName" class="form-control" />
                                    <span asp-validation-for="CustLastName" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="CustEmail" class="form-label">
                                        <i class="fas fa-envelope me-2"></i>Email
                                    </label>
                                    <input asp-for="CustEmail" class="form-control" />
                                    <span asp-validation-for="CustEmail" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="CustHomePhone" class="form-label">
                                        <i class="fas fa-phone me-2"></i>Home Phone
                                    </label>
                                    <input asp-for="CustHomePhone" class="form-control" />
                                    <span asp-validation-for="CustHomePhone" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="CustBusPhone" class="form-label">
                                        <i class="fas fa-phone-office me-2"></i>Business Phone
                                    </label>
                                    <input asp-for="CustBusPhone" class="form-control" />
                                    <span asp-validation-for="CustBusPhone" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Address Information -->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CustAddress" class="form-label">
                                        <i class="fas fa-map-marker-alt me-2"></i>Address
                                    </label>
                                    <input asp-for="CustAddress" class="form-control" />
                                    <span asp-validation-for="CustAddress" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="CustCity" class="form-label">
                                        <i class="fas fa-city me-2"></i>City
                                    </label>
                                    <input asp-for="CustCity" class="form-control" />
                                    <span asp-validation-for="CustCity" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="CustProv" class="form-label">
                                        <i class="fas fa-map me-2"></i>Province
                                    </label>
                                    <input asp-for="CustProv" class="form-control" />
                                    <span asp-validation-for="CustProv" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="CustPostal" class="form-label">
                                        <i class="fas fa-mail-bulk me-2"></i>Postal Code
                                    </label>
                                    <input asp-for="CustPostal" class="form-control" />
                                    <span asp-validation-for="CustPostal" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="CustCountry" class="form-label">
                                        <i class="fas fa-globe me-2"></i>Country
                                    </label>
                                    <input asp-for="CustCountry" class="form-control" />
                                    <span asp-validation-for="CustCountry" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save me-2"></i>Save Changes
                            </button>
                            <a asp-controller="Account" asp-action="Profile" class="btn btn-secondary ms-2">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>