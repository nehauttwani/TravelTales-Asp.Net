@model Travel_Agency___Data.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Profile";
    var imagePath = $"/images/profile_pictures/customer_{Model.CustomerId}.jpg";
}

<div class="container mb-4" style="margin-top: 7rem;">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-dark text-white">
                    <h3 class="mb-0 text-center">Your Profile</h3>
                </div>

                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <!-- Profile Picture Section -->
                    <div class="text-center mb-4">
                        <img src="@imagePath" alt="Profile Picture"
                             id="profilePreview"
                             style="width: 200px; height: 200px; border-radius: 50%; object-fit: cover;"
                             onerror="this.src='/images/profile_pictures/defaultimage.png'" />

                        <form asp-action="UpdateProfilePicture"
                              method="post"
                              enctype="multipart/form-data"
                              class="mt-3"
                              id="profilePictureForm"
                              onsubmit="return validateProfilePicture()">
                            <div class="mb-3">
                                <input type="file"
                                       name="profilePicture"
                                       id="profilePicture"
                                       accept=".jpg,.jpeg,.png"
                                       class="form-control"
                                       onchange="previewImage(this)" />
                                <small class="text-muted">
                                    Accepted formats: JPG, JPEG, PNG. Maximum size: 2MB
                                </small>
                                <div id="profilePictureError" class="invalid-feedback"></div>
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-upload me-2"></i>Update Picture
                            </button>
                        </form>
                    </div>

                    <!-- Profile Information -->
                    <div class="bg-light p-4 rounded mb-4">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <p><i class="fas fa-user me-2"></i><strong>Name:</strong> @Model.CustFirstName @Model.CustLastName</p>
                                <p><i class="fas fa-map-marker-alt me-2"></i><strong>Address:</strong> @Model.CustAddress</p>
                                <p><i class="fas fa-city me-2"></i><strong>City:</strong> @Model.CustCity</p>
                                <p><i class="fas fa-map me-2"></i><strong>Province:</strong> @Model.CustProv</p>
                                <p><i class="fas fa-mail-bulk me-2"></i><strong>Postal Code:</strong> @Model.CustPostal</p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <p><i class="fas fa-globe me-2"></i><strong>Country:</strong> @Model.CustCountry</p>
                                <p><i class="fas fa-phone me-2"></i><strong>Home Phone:</strong> @Model.CustHomePhone</p>
                                <p><i class="fas fa-phone-office me-2"></i><strong>Business Phone:</strong> @Model.CustBusPhone</p>
                                <p><i class="fas fa-envelope me-2"></i><strong>Email:</strong> @Model.CustEmail</p>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-grid gap-3">
                        <a asp-action="EditProfile" class="btn btn-warning">
                            <i class="fas fa-edit me-2"></i>Edit Profile
                        </a>

                        <a asp-controller="Purchase" asp-action="PurchasedProducts" asp-route-customerId="@Model.CustomerId"
                           class="btn btn-danger">
                            <i class="fas fa-shopping-cart me-2"></i>View Purchased Products
                        </a>

                        <a asp-controller="Wallet" asp-action="Index" asp-route-customerId="@Model.CustomerId"
                           class="btn btn-success">
                            <i class="fas fa-wallet me-2"></i>View Wallet
                        </a>

                        <a asp-controller="Preferences" asp-action="Edit" asp-route-customerId="@Model.CustomerId"
                           class="btn btn-primary">
                            <i class="fas fa-compass me-2"></i>Add Travel Preferences
                        </a>

                        <a asp-controller="Preferences" asp-action="Index" asp-route-customerId="@Model.CustomerId"
                           class="btn btn-primary">
                            <i class="fas fa-compass me-2"></i>My Travel Preferences
                        </a>

                        <a asp-controller="Booking" asp-action="SendTestEmail" class="btn btn-info">
                            <i class="fas fa-envelope me-2"></i>Send Test Email
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/site.js"></script>
}