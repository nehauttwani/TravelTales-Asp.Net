@model Travel_Agency___Data.ViewModels.WalletViewModel

<div class="wallet-container">
    <h1>Wallet Management</h1>

    <!-- Display Current Balance -->
    <div class="wallet-balance">
        <h2>Current Balance: @Model.CurrentBalance.ToString("C")</h2>
    </div>

    <!-- Transactions List -->
    <div class="transactions">
        <h3>Transaction History</h3>
        @if (Model.Transactions.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Transaction Date</th>
                        <th>Amount</th>
                        <th>Type</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var transaction in Model.Transactions)
                    {
                        <tr>
                            <td>@transaction.TransactionDate.ToString("g")</td>
                            <td>@transaction.Amount.ToString("C")</td>
                            <td>@transaction.TransactionType</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No transactions found.</p>
        }
    </div>

    <!-- Add Funds with Credit Card -->
    <div class="wallet-actions">
        <h3>Add Funds via Credit Card</h3>
        @if (Model.CreditCards.Any())
        {
            <form asp-action="AddFundsWithCreditCard" asp-controller="Wallet" method="post">
                <input type="hidden" name="customerId" value="@Model.CustomerId" />
                <div class="form-group">
                    <label for="CreditCardId">Select Credit Card:</label>
                    <select id="CreditCardId" name="creditCardId" class="form-control" required>
                        @foreach (var card in Model.CreditCards)
                        {
                            <option value="@card.CreditCardId">
                                @card.Ccname (**** @card.Ccnumber.Substring(card.Ccnumber.Length - 4))
                            </option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="Amount">Amount:</label>
                    <input type="number" id="Amount" name="amount" class="form-control" step="0.01" min="1" required />
                </div>
                <button type="submit" class="btn btn-primary">Add Funds</button>
            </form>
        }
        else
        {
            <p>No credit cards available. Please add a credit card to fund your wallet.</p>
        }
    </div>

    <!-- Optional Deduct Funds Form -->
    <div class="wallet-actions">
        <h3>Deduct Funds</h3>
        <form asp-action="DeductFunds" asp-controller="Wallet" method="post">
            <input type="hidden" name="customerId" value="@Model.CustomerId" />
            <div class="form-group">
                <label for="deductAmount">Amount:</label>
                <input type="number" id="deductAmount" name="amount" class="form-control" step="0.01" required />
            </div>
            <button type="submit" class="btn btn-danger">Deduct Funds</button>
        </form>
    </div>

    <!-- Credit Cards List -->
    @if (Model.CreditCards.Any())
    {
        <div class="credit-cards">
            <h3>Your Credit Cards</h3>
            <ul class="list-group">
                @foreach (var card in Model.CreditCards)
                {
                    <li class="list-group-item">
                        <strong>@card.Ccname</strong> (**** @card.Ccnumber.Substring(card.Ccnumber.Length - 4))
                        - Expiry: @card.Ccexpiry.ToString("MM/yyyy")
                    </li>
                }
            </ul>
        </div>
    }
</div>
