@{
    ViewData["Title"] = "Search";
}

<h2>Search for Your Purchases</h2>

<form method="post" action="@Url.Action("Search", "Customer")">
    <label for="searchInput">Enter Customer ID or Name:</label>
    <input type="text" id="searchInput" name="customerNameOrId" />
    <button type="submit">Search</button>
</form>

@if (TempData["ErrorMessage"] != null)
{
    <p style="color: red;">@TempData["ErrorMessage"]</p>
}
