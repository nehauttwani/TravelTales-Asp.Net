@model List<Travel_Agency___Data.ViewModels.ProductListViewModel>

    <h2>Purchases</h2>

    @if (Model != null && Model.Any())
    {
        <table>
            <thead>
                <tr>
                    <th>Package Name</th>
                    <th>Price</th>
                    <th>Agency Commission</th>
                    <th>Total Cost</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var purchase in Model)
                {
                    <tr>
                        <td>@purchase.PackageName</td>
                        <td>$@purchase.PackagePrice.ToString("F2")</td>
                        <td>$@purchase.AgencyCommission.ToString("F2")</td>
                        <td>$@purchase.TotalCost.ToString("F2")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>This customer has no purchases.</p>
    }
