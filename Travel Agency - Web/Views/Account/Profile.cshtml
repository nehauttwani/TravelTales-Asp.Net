@model Travel_Agency___Data.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Profile";
    var imagePath = $"/images/profile_pictures/customer_{Model.CustomerId}.jpg";
}

<div class="container mb-4" style="margin-top: 7rem;">
    <h2 class="text-center mb-4">Your Profile</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body">
                    <!-- Profile Picture Section -->
                    <div class="text-center mb-4">
                        <img src="@imagePath" alt="Profile Picture"
                             id="profilePreview"
                             style="width: 200px; height: 200px; border-radius: 50%; object-fit: cover;"
                             onerror="this.src='/images/profile_pictures/defaultimage.png'" />

                        <form asp-action="UpdateProfilePicture"
                              method="post"
                              enctype="multipart/form-data"
                              class="mt-3"
                              id="profilePictureForm"
                              onsubmit="return validateProfilePicture()">

                            <div class="form-group">
                                <input type="file"
                                       name="profilePicture"
                                       id="profilePicture"
                                       accept=".jpg,.jpeg,.png"
                                       class="form-control"
                                       onchange="previewImage(this)" />
                                <small class="text-muted">
                                    Accepted formats: JPG, JPEG, PNG. Maximum size: 2MB
                                </small>
                                <div id="profilePictureError" class="invalid-feedback"></div>
                            </div>
                            <button type="submit" class="btn btn-primary mt-2">
                                <i class="fas fa-upload me-2"></i>Update Picture
                            </button>
                        </form>
                    </div>

                    <!-- Rest of your profile information remains the same -->
                    <div class="profile-info">
                        <h5><strong>First Name:</strong> @Model.CustFirstName</h5>
                        <h5><strong>Last Name:</strong> @Model.CustLastName</h5>
                        <h5><strong>Address:</strong> @Model.CustAddress</h5>
                        <h5><strong>City:</strong> @Model.CustCity</h5>
                        <h5><strong>Province:</strong> @Model.CustProv</h5>
                        <h5><strong>Postal Code:</strong> @Model.CustPostal</h5>
                        <h5><strong>Country:</strong> @Model.CustCountry</h5>
                        <h5><strong>Home Phone:</strong> @Model.CustHomePhone</h5>
                        <h5><strong>Business Phone:</strong> @Model.CustBusPhone</h5>
                        <h5><strong>Email:</strong> @Model.CustEmail</h5>
                    </div>

                    <div class="text-center mt-4">
                        <a href="@Url.Action("EditProfile")" class="btn btn-warning btn-lg">
                            <i class="fas fa-edit me-2"></i>Edit Profile
                        </a>
                    </div>

                    <div class="text-center mt-4">
                        <a href="@Url.Action("PurchasedProducts", "Purchase", new { customerId = Model.CustomerId })"
                           class="btn btn-danger btn-lg">
                            <i class="fas fa-shopping-cart me-2"></i>View Purchased Products
                        </a>
                    </div>

                    <div class="text-center mt-4">
                        <a href="@Url.Action("Index", "Wallet", new { customerId = Model.CustomerId })"
                           class="btn btn-success btn-lg">
                            <i class="fas fa-wallet me-2"></i>View Wallet
                        </a>
                    </div>

                    <div class="text-center mt-4">
                        <a href="@Url.Action("Edit", "Preferences", new { customerId = Model.CustomerId })"
                           class="btn btn-primary btn-lg">
                            <i class="fas fa-compass me-2"></i>Add Travel Preferences
                        </a>
                    </div>

                    <div class="text-center mt-4">
                        <a href="@Url.Action("Index", "Preferences", new { customerId = Model.CustomerId })"
                           class="btn btn-primary btn-lg">
                            <i class="fas fa-compass me-2"></i>My Travel Preferences
                        </a>
                    </div>

                 

                    <!-- Add this where you want the button to appear -->
                    <div class="text-center mt-4">
                        <a asp-controller="Booking"
                           asp-action="SendTestEmail"
                           class="btn btn-info">
                            <i class="fas fa-envelope me-2"></i>Send Test Email
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/site.js"></script>
}