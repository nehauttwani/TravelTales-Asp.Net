@model Travel_Agency___Data.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container mb-4" style="margin-top: 7rem;">
    <h2 class="text-center mb-4">Edit Your Profile</h2>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body">
                    <form method="post" asp-action="UpdateProfile" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <p>@error.ErrorMessage</p>
                                }
                            </div>
                        }

                        <!-- Profile Fields -->
                        <h4 class="mb-3">Profile Information</h4>

                        <!-- Profile Picture -->
                        <div class="mb-3">
                            <label for="ProfilePicture" class="form-label">Profile Picture:</label>
                            <input type="file" name="ProfilePicture" class="form-control" />
                            <span asp-validation-for="ProfilePicture" class="text-danger"></span>

                            <!-- Display current profile picture if exists -->
                            @if (Model.ProfilePicture != null && Model.ProfilePicture.Length > 0)
                            {
                                <div class="mt-3">
                                    <h5>Current Profile Picture:</h5>
                                    <img src="@Url.Action("GetProfileImage", "Account")" alt="Profile Picture" class="img-fluid" style="max-height: 200px; width: auto;" />
                                </div>
                            }
                            else
                            {
                                <p>No profile picture uploaded.</p>
                            }
                        </div>

                        <!-- Other Profile Fields -->
                        <div class="mb-3">
                            <label for="CustFirstName" class="form-label">First Name:</label>
                            <input type="text" asp-for="CustFirstName" class="form-control" />
                            <span asp-validation-for="CustFirstName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="CustLastName" class="form-label">Last Name:</label>
                            <input type="text" asp-for="CustLastName" class="form-control" />
                            <span asp-validation-for="CustLastName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="CustAddress" class="form-label">Address:</label>
                            <input type="text" asp-for="CustAddress" class="form-control" />
                            <span asp-validation-for="CustAddress" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="CustCity" class="form-label">City:</label>
                            <input type="text" asp-for="CustCity" class="form-control" />
                            <span asp-validation-for="CustCity" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="CustProv" class="form-label">Province:</label>
                            <input type="text" asp-for="CustProv" class="form-control" />
                            <span asp-validation-for="CustProv" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="CustPostal" class="form-label">Postal Code:</label>
                            <input type="text" asp-for="CustPostal" class="form-control" />
                            <span asp-validation-for="CustPostal" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="CustCountry" class="form-label">Country:</label>
                            <input type="text" asp-for="CustCountry" class="form-control" />
                            <span asp-validation-for="CustCountry" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="CustHomePhone" class="form-label">Home Phone:</label>
                            <input type="text" asp-for="CustHomePhone" class="form-control" />
                            <span asp-validation-for="CustHomePhone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="CustBusPhone" class="form-label">Business Phone:</label>
                            <input type="text" asp-for="CustBusPhone" class="form-control" />
                            <span asp-validation-for="CustBusPhone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="CustEmail" class="form-label">Email:</label>
                            <input type="email" asp-for="CustEmail" class="form-control" />
                            <span asp-validation-for="CustEmail" class="text-danger"></span>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-warning btn-lg">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
