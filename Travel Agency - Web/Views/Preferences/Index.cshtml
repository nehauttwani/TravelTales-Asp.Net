@model Travel_Agency___Data.ViewModels.TravelPreferenceViewModel

<div class="container" style="margin-top: 100px;">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Return to Profile Button -->
            <div class="mb-4">
                <a href="@Url.Action("Profile", "Account")" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left"></i> Back to Profile
                </a>
            </div>

            <div class="card">
                <div class="card-header bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="mb-0">My Travel Preferences</h3>
                        <a asp-action="Edit" class="btn btn-primary btn-sm">
                            Edit Preferences
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    @if (Model.PreferredClimate == null && Model.SelectedActivities.Count == 0
                    && Model.TravelCompanion == null && Model.PreferredLocation == null)
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-compass fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No travel preferences set yet</h5>
                            <a asp-action="Edit" class="btn btn-primary mt-3">Set Your Preferences</a>
                        </div>
                    }
                    else
                    {
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h5><i class="fas fa-sun text-warning me-2"></i>Preferred Climate</h5>
                                        <p class="mb-0">@(Model.PreferredClimate ?? "Not specified")</p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h5><i class="fas fa-users text-info me-2"></i>Travel Companion</h5>
                                        <p class="mb-0">@(Model.TravelCompanion ?? "Not specified")</p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h5><i class="fas fa-map-marker-alt text-danger me-2"></i>Preferred Location</h5>
                                        <p class="mb-0">@(Model.PreferredLocation ?? "Not specified")</p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">
                                        <h5><i class="fas fa-hiking text-success me-2"></i>Preferred Activities</h5>
                                        @if (Model.SelectedActivities.Any())
                                        {
                                            <div class="d-flex flex-wrap gap-2">
                                                @foreach (var activity in Model.SelectedActivities)
                                                {
                                                    <span class="badge bg-primary">@activity</span>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <p class="mb-0">No activities selected</p>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>