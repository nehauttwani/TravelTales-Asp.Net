@model Travel_Agency___Data.ViewModels.TravelPreferenceViewModel

<div class="container" style="margin-top: 100px;">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="mb-0">Edit Travel Preferences</h3>
                        <a asp-action="Index" class="btn btn-outline-primary">
                            Back to Preferences
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="CustomerId" />
                        <input type="hidden" asp-for="PreferenceId" />

                        <!-- Climate Preferences -->
                        <div class="mb-4">
                            <label asp-for="PreferredClimate" class="form-label fw-bold">
                                Preferred Climate
                            </label>
                            <select asp-for="PreferredClimate" class="form-select">
                                <option value="">Select Climate</option>
                                @foreach (var climate in Model.ClimateOptions)
                                {
                                    <option value="@climate">@climate</option>
                                }
                            </select>
                        </div>

                        <!-- Activities -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">Preferred Activities</label>
                            <div class="row g-3">
                                @foreach (var activity in Model.AvailableActivities)
                                {
                                    <div class="col-md-6">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox"
                                                   name="SelectedActivities" value="@activity"
                                            @(Model.SelectedActivities.Contains(activity) ? "checked" : "") />
                                            <label class="form-check-label">@activity</label>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Travel Companion -->
                        <div class="mb-4">
                            <label asp-for="TravelCompanion" class="form-label fw-bold">
                                Travel Companion
                            </label>
                            <select asp-for="TravelCompanion" class="form-select">
                                <option value="">Select Travel Companion</option>
                                @foreach (var companion in Model.TravelCompanionOptions)
                                {
                                    <option value="@companion">@companion</option>
                                }
                            </select>
                        </div>

                        <!-- Location -->
                        <div class="mb-4">
                            <label asp-for="PreferredLocation" class="form-label fw-bold">
                                Preferred Location
                            </label>
                            <select asp-for="PreferredLocation" class="form-select">
                                <option value="">Select Location</option>
                                @foreach (var location in Model.LocationOptions)
                                {
                                    <option value="@location">@location</option>
                                }
                            </select>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary">
                                Save Preferences
                            </button>
                            <a asp-action="Index" class="btn btn-secondary ms-2">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>