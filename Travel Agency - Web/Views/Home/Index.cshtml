@{
    ViewData["Title"] = "Home Page";
    ViewData["ActivePage"] = "Home";
}

<div>
    @if (TempData["SuccessMessage"] != null)
    {
        <div id="successAlert" class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <script>
            setTimeout(function () {
                $('#successAlert').alert('close');
            }, 3000);
        </script>
    }

    <!-- Hero Section -->
    <section class="hero-section position-relative">
        <img src="~/images/hero-image.jpg" alt="Travel destination" class="img-fluid w-100">
        <div class="position-absolute top-50 start-50 translate-middle text-center text-white">
            <h1 class="display-4 fw-bold mb-4">Discover Your Next Adventure</h1>
            <form class="d-flex justify-content-center">
                <input type="text" class="form-control me-2" placeholder="Where do you want to go?">
                <button class="btn btn-primary" type="submit">Search</button>
            </form>
        </div>
    </section>

    <!-- Services Section -->
    <section class="services-section py-5 bg-light">
        <div class="container">
            <h2 class="text-center mb-5 fw-bold">Our Services</h2>
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="card h-100 service-card">
                        <div class="card-body text-center">
                            <img src="./images/plane.png" alt="Flight reservation" class="mb-3" height="100" width="100" />
                            <h3 class="card-title">Flight Reservation</h3>
                            <p class="card-text">Book domestic and international flights with ease.</p>
                            <a href="#" class="btn btn-outline-primary">Learn More</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card h-100 service-card">
                        <div class="card-body text-center">
                            <img src="./images/hotel.png" alt="Hotel reservation" class="mb-3" height="100" width="100" />
                            <h3 class="card-title">Hotel Reservation</h3>
                            <p class="card-text">Choose from a wide range of accommodations worldwide.</p>
                            <a href="#" class="btn btn-outline-primary">Learn More</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card h-100 service-card">
                        <div class="card-body text-center">
                            <img src="./images/tour-guide.png" alt="Tour guide" class="mb-3" height="100" width="100" />
                            <h3 class="card-title">Tour Guide</h3>
                            <p class="card-text">Explore new destinations with expert local guides.</p>
                            <a href="#" class="btn btn-outline-primary">Learn More</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Destinations -->
    <section class="featured-destinations py-5">
        <div class="container">
            <h2 class="text-center mb-5 fw-bold">Featured Destinations</h2>
            <div class="row">
                @foreach (var destination in new[] { "Paris", "Bali", "New York", "Tokyo" })
                {
                    <div class="col-md-3 mb-4">
                        <div class="card">
                            <img src="~/images/@(destination.ToLower()).jpg" class="card-img-top" alt="@destination">
                            <div class="card-body">
                                <h5 class="card-title">@destination</h5>
                                <p class="card-text">Experience the magic of @destination.</p>
                                <a href="#" class="btn btn-primary">Explore</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- Packages Section -->
    <section class="packages-section py-5 bg-light">
        <div class="container">
            <h2 class="text-center mb-5 fw-bold">Our Packages Crafted Just For You</h2>
            <div class="text-center mb-4">
                <a href="@Url.Action("Index", "Package")" class="btn btn-primary btn-lg">View Packages</a>
            </div>
        </div>
    </section>

    <!-- Testimonials Section -->
    <section class="testimonials-section py-5">
        <div class="container">
            <h2 class="text-center mb-5 fw-bold">What Our Clients Say</h2>
            <div id="testimonialCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <div class="testimonial-item text-center">
                            <img src="./images/man.jpeg" class="rounded-circle mb-3" width="100" height="100" alt="David Patel">
                            <h5>David Patel</h5>
                            <p class="text-muted">Honeymooner</p>
                            <p>"Exceptional service! Emily at Travel Tales agency helped me plan an unforgettable honeymoon in Bali. 5/5 stars, Highly Recommended!"</p>
                            <div class="stars">
                                @for (int i = 0; i < 5; i++)
                                {
                                    <i class="fas fa-star text-warning"></i>
                                }
                            </div>
                        </div>
                    </div>
                    <!-- Add more carousel items for other testimonials -->
                </div>
            </div>
        </div>
    </section>

    <!-- Newsletter Signup -->
    <section class="newsletter-section py-5 bg-primary text-white">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h2 class="mb-3">Subscribe to Our Newsletter</h2>
                    <p>Get the latest travel deals and updates straight to your inbox!</p>
                </div>
                <div class="col-md-6">
                    <form class="d-flex">
                        <input type="email" class="form-control me-2" placeholder="Enter your email">
                        <button class="btn btn-light" type="submit">Subscribe</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
